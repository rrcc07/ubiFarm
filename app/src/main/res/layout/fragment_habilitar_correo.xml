<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menuDesarrollador.HabilitarCorreoFragment"
    android:background="@color/white"
    android:padding="8dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:text="Correo para Habilitar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/correoParaHabilitar"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:hint="Correo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/texto">

        <android.support.design.widget.TextInputEditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_elegir_rol"
            android:inputType="textEmailAddress"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <ProgressBar
        android:id="@+id/regProgressBarAgregarCorreo"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/btnA単adirCorreo"
        app:layout_constraintStart_toStartOf="@+id/btnA単adirCorreo"
        app:layout_constraintTop_toTopOf="@+id/btnA単adirCorreo" />

    <Button
        android:id="@+id/btnA単adirCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/btn_elegir_rol2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Guardar"
        android:textColor="@drawable/txt_btn_elegir_rol2"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correoParaHabilitar" />

</android.support.constraint.ConstraintLayout>